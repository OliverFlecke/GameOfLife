{
  "name": "game_of_life",
  "version": "0.1.0",
  "private": true,
  "author": "Oliver Fleckenstein",
  "homepage": "http://OliverFlecke.github.io/GameOfLife",
  "dependencies": {
    "@types/jest": "23.3.13",
    "@types/node": "10.12.21",
    "@types/react": "16.8.1",
    "@types/react-dom": "16.0.11",
    "husky": "^1.3.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "^2.1.3",
    "typescript": "3.3.1"
  },
  "scripts": {
    "lint-ts": "npx tslint --project .",
    "lint-prettier": "npx prettier --config .prettierrc \"./**/*.{js,jsx,ts,tsx,json,scss,md}\" --write",
    "lint": "npm run lint-ts && npm run lint-prettier",
    "start": "react-scripts start",
    "build-scss": "npx tcm -p ./**/*.module.scss",
    "prebuild": "npm run build-scss",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prepublish": "npm run build",
    "publish": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "gh-pages": "^2.0.1",
    "lint-staged": "^8.1.3",
    "node-sass": "^4.11.0",
    "prettier": "^1.16.4",
    "terser": "^3.14.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typed-css-modules": "^0.3.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
